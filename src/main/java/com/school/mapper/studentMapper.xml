<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.school.mapper.StudentRepository">

    <resultMap id="studentMap" type="com.school.entity.Student">
        <id property="id" column="sid"></id>
        <result property="name" column="sname"></result>
        <result property="age" column="sage"></result>
        <association property="classes" javaType="com.school.entity.Classes">
            <result property="classesName" column="classname"></result>
        </association>
    </resultMap>
    
    <select id="getClassesAndStudnet" parameterType="int" resultMap="studentMap">
        select a.id as  sid  ,a.name as sname ,a.age as sage ,b.classesName as  classname from school.student a ,school.classes b  where a.classesid= b.id
and a.id=#{stuId};
    </select>
</mapper>